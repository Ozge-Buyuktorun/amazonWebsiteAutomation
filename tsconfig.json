{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["ES2020", "dom"],
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "strict": true
    },
    "include": ["src/**/*", "config/**/*"],
    "exclude": ["node_modules"]
  }